<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#DFDFF0"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="107dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/className"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:text="@string/class_aa"
                android:textColor="@android:color/black"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numberOfStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="serif"
                android:text="@string/students_25"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/homeTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="serif"
                android:text="@string/teacher_mr_smith"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Right side: Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnschedule"
                android:layout_width="107dp"
                android:layout_height="48dp"
                android:text="@string/schedule"
                android:backgroundTint="#1C3557"
                android:textColor="@android:color/white"
                android:layout_marginBottom="5dp"/>

            <Button
                android:id="@+id/btnclear"
                android:layout_width="107dp"
                android:layout_height="48dp"
                android:text="@string/clearr"
                android:backgroundTint="#1C3557"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
